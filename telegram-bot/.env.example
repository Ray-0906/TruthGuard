# Multi-Agent Verification Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# =================================================================
# TELEGRAM BOT CONFIGURATION
# =================================================================

# Your Telegram Bot Token from @BotFather
# Get it by messaging @BotFather on Telegram and creating a new bot
TELEGRAM_BOT_TOKEN=8439646969:AAFljlINHBOMDHjXHVme2ZJ5dzA4mme-3C8

# Webhook URL for production deployment (optional for development)
# Format: https://yourdomain.com (without trailing slash)
WEBHOOK_URL=https://your-domain.com

# =================================================================
# SERVER CONFIGURATION
# =================================================================

# Port for the Express server
PORT=3000

# Environment (development, production, staging)
NODE_ENV=development

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,https://your-domain.com

# =================================================================
# SECURITY CONFIGURATION
# =================================================================

# Rate limiting configuration
RATE_LIMIT_POINTS=10
RATE_LIMIT_DURATION=60

# Maximum content length for verification (in characters)
MAX_CONTENT_LENGTH=5000

# Maximum file size for image/document uploads (in MB)
MAX_FILE_SIZE_MB=10

# =================================================================
# VERIFICATION SYSTEM CONFIGURATION
# =================================================================

# Processing time simulation (in milliseconds)
MIN_PROCESSING_TIME=2000
MAX_PROCESSING_TIME=6000

# Enable/disable specific agent types
ENABLE_NEWS_AGENT=true
ENABLE_FACT_AGENT=true
ENABLE_SCAM_AGENT=true
ENABLE_PHISHING_AGENT=true
ENABLE_IMAGE_AGENT=true
ENABLE_VIDEO_AGENT=true

# =================================================================
# LOGGING AND MONITORING
# =================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable detailed request logging
ENABLE_REQUEST_LOGGING=false

# Maximum log file size (in MB)
MAX_LOG_SIZE_MB=100

# =================================================================
# EXTERNAL API CONFIGURATION (Optional - for real API integration)
# =================================================================

# FactCheck.org API
FACTCHECK_API_KEY=your_factcheck_api_key
FACTCHECK_API_URL=https://api.factcheck.org/v1

# Google Fact Check Tools API
GOOGLE_FACTCHECK_API_KEY=your_google_api_key

# OpenAI API (for advanced content analysis)
OPENAI_API_KEY=your_openai_api_key

# =================================================================
# DATABASE CONFIGURATION (Optional - for persistence)
# =================================================================

# MongoDB connection string (optional)
MONGODB_URI=mongodb://localhost:27017/verification-bot

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =================================================================
# DEPLOYMENT CONFIGURATION
# =================================================================

# Heroku specific
HEROKU_APP_NAME=your-heroku-app-name

# Railway specific
RAILWAY_STATIC_URL=https://your-app.railway.app

# Vercel specific
VERCEL_URL=your-vercel-url

# Docker specific
DOCKER_ENV=false

# =================================================================
# DEVELOPMENT CONFIGURATION
# =================================================================

# Enable development features
ENABLE_DEV_COMMANDS=true

# Mock response delays (for testing)
MOCK_RESPONSE_DELAY=true

# Enable debug logging
DEBUG_MODE=false